<div>
  <nav>
    <h1>Proyecto Backend NP</h1>
      <div class='nav-buttons'>
        <button class="nav-button"><a href="/products" id="viewCart" style="color: white"> PRODUCTS </a></button>
        <button id="logoutBtn"> LOGOUT </button>
      </div>
  </nav>
  <h1>Carrito de compras:</h1>
  {{#if cart.products.length }}
    <table>
      <thead>
        <tr>
          <th>Producto</th>
          <th>Precio</th>
          <th>Cantidad</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each cart.products}}
          <tr>
            <td>{{this.product.title}}</td>
            <td>{{this.product.price}}</td>
            <td>{{this.quantity}}</td>
            <td>
              <button 
                onclick="deleteItem('{{../cart._id}}', '{{this.product._id}}')"> 
                  DELETE PRODUCT 
              </button>
              <button 
                onclick="plusItem('{{../cart._id}}', '{{this.product._id}}', '{{this.product.title}}')"> 
                  + 
              </button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <button onclick="emptyCart('{{cart._id}}')"> EMPTY CART </button>
    <button onclick="purchaseCart('{{cart._id}}')"> COMPRAR </button>
  {{else}}
    <p>NO HAY PRODUCTOS EN EL CARRITO</p>
  {{/if}}
</div>

<script src="/js/carts.js"></script>
<script src="/js/logout.js"></script>
