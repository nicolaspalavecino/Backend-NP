<div>
    <h1>List of Books from MongoDB:</h1>
    <div>
        {{#each docs}}
            <div>
                <p>- {{this.title}}</p>
                <ul>
                    <li>$ {{this.price}}</li>
                    <li>{{this.description}}</li>
                    <li>Stock: {{this.stock}}</li>
                </ul>
            </div>
            <button id={{this._id}}> + CART </button>
        {{/each}}
    </div>
</div>
<br/>
<div>
    {{#if hasPrevPage}}
        <a href={{this.prevLink}}><< Anterior</a>
    {{/if}}
    &nbsp;
    {{this.page}}
    &nbsp;
     {{#if hasNextPage}}
        <a href={{this.nextLink}}>Siguiente >></a>
    {{/if}} 
</div>
